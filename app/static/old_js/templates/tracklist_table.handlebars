<div class="tracklist">
  <table class="table table-responsive table-condensed-">
    <thead class="green">
      <th class="text-center">SAMPLE</th>
      <th>#</th>
      <th>SONG</th>
      <th>ARTIST</th>
      <th class="text-center">YEAR</th>
    </thead>
    <tbody>
      {{#each tracklist}}
        <tr>
          <td class="text-center">
            {{# if spotify_song.id }}
              <span class="glyphicon glyphicon-play-circle preview" previewUrl="{{spotify_song.preview_url}}"></span>
            {{else}}
              <span class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Song not on Spotify"></span>
            {{/if}}
          </td>
          <td class="text-left">{{position}}</td>

          {{#if resolved}}
            <td>
              {{#if spotify_song.id}}{{spotify_song.name}}{{else}}{{parsed_song}}{{/if}}
            </td>
            <td>
              {{#getArtistTitle spotify_artists parsed_artist}}{{/getArtistTitle}}
            </td>
            <td class="text-center">
              {{#if year}}{{year}}{{else}}-{{/if}}
            </td>
          {{else}}
            <td colspan="3">
              {{title}}
            </td>
          {{/if}}
        </tr>
      {{/each}}
  </table>
</div>
