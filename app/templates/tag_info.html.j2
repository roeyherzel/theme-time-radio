{% extends "layout.html.j2" %}

{% block page_content %}
  <header>
    <h1 data-tag-name="{{tag}}">{{tag}}</h1>
  </header>

  <main>
    <ul class="tabs">
      <li class="tab-header"><a href="#">Description</a></li>
      <li class="tab-body">
        <section id="desc"></section>
      </li>

      <li class="tab-header"><a href="#">Tracklist</a></li>
      <li class="tab-body">
        <section id="tracklist_placeholder"></section>
      </li>

      <li class="tab-header"><a href="#">Artists</a></li>
      <li class="tab-body">
        <section id="artists_placeholder"></section>
      </li>
    </ul>
  </main>
{% endblock %}

{% block page_styles %}
  <link rel="stylesheet" href="/static/css/pages/tag-info.css">
{% endblock %}

{% block page_scripts %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/tag_info.js') }}"></script>
{% endblock %}
