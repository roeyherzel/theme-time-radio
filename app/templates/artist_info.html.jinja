{% extends "layout.html.jinja" %}

{% block page_content %}
  <header>
    <img src="{{artist.lastfm_image}}" alt="{{artist.name}} Photo">
    <h1>{{artist.name}}</h1>
  </header>


  <main>
    <ul class="tabs">
      <li class="tab"><a href="#">Intro</a></li>
      <li class="tab-content">
        <section id="intro">

        </section>
      </li>

      <li class="tab"><a href="#">Tracklist</a></li>
      <li class="tab-content">
        <section id="tracklist"></section> <!-- tracklist placeholder -->
      </li>

      <li class="tab"><a href="#">Artists</a></li>
      <li class="tab-content">
        <section id="artists"></section> <!-- artists placeholder -->
      </li>
    </ul>
  </main>
{% endblock %}

{% block page_scripts %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/artist_info.js') }}"></script>
{% endblock %}
