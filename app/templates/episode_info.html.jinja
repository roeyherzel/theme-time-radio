<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theme Time Radio Hour</title>

    <link rel="stylesheet" href="{{ url_for('static', filename='css/normalize.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
  </head>
  <body>
    <header id="mainHeader" class="clearfix">
      <h3>Theme Time</h3>
      <nav>
      </nav>
    </header>
    <div id="pageContent">

      <header class="clearfix">
        <img src="{{ episode.image }}" alt="Photo of {{ episode.title }}">
        <p class="episode-path">Season <span id="seasonId"> {{ episode.season }}</span> - Episode <span id="episodeId">{{ episode.id }}</span></p>
        <h1>{{ episode.title }}</h1>
        <p class="release-date">{{ episode.aired }}</p>
      </header>

      <section>
        <nav id="episodePlayerNav">
          <ul>
            <li><button id="episodePrevButton" type="button" name="previous_button" class="flaticon-previous"></button></li>
            <li><button id="episodePlayButton" type="button" name="play_button" class="flaticon-play-button"></button></li>
            <li><button id="episodeNextButton" type="button" name="next_button" class="flaticon-next"></button></li>
          </ul>
        </nav>
      </section>

      <main>
        <ul class="tabs">
          <li class="tab"><a href="#">Intro</a></li>
          <li class="tab-content">
            <section id="intro">
              <p>{{ episode.description }}...</p>
            </section>
          </li>

          <li class="tab"><a href="#">Tracklist</a></li>
          <li class="tab-content">
            <section id="tracklist"></section> <!-- tracklist placeholder -->
          </li>

          <li class="tab"><a href="#">Artists</a></li>
          <li class="tab-content">
            <section id="artists"></section> <!-- artists placeholder -->
          </li>
        </ul>
      </main>
    </div> <!-- end pageContent -->

    <!-- javaScripts -->
    <script type="text/javascript" src="{{ url_for('static', filename='js/jquery-3.1.1.min.js') }}"></script>

    <!-- TODO: try to workwitout underscore.js -->
    <script type="text/javascript" src="{{ url_for('static', filename='js/underscore-min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='js/handlebars.min-latest.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='js/app.js') }}"></script>
  </body>
</html>
