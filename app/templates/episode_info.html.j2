{% extends "layout.html.j2" %}

{% block page_content %}
  <header>
    <img src="{{ episode.image }}" alt="Photo of {{ episode.title }}">
    <p>{{ episode.aired }}</p>
    <h1>{{ episode.title }}</h1>
    <p>
      Season <span id="seasonId"> {{ episode.season }}</span> - Episode <span id="episode_id">{{ episode.id }}</span>
    </p>
  </header>

  <main>
    <div id="episode_player">

      <div class="episode-player-row">
        <button type="button" class="episode-prev"></button>
        <button type="button" class="episode-playpause"></button>
        <button type="button" class="episode-next"></button>
        <button type="button" class="episode-volume"></button>
      </div>
      <div class="episode-player-row">
        <!-- <div class="episode-time">

          <span class="episode-delimiter-time">&nbsp;/&nbsp;</span>

        </div> -->
        <span class="episode-current-time">0:00</span>
        <div class="episode-progress-bar"></div>
        <span class="episode-total-time">59:00</span>
      </div>

    </div>


    <ul class="tabs">
      <li class="tab"><a href="#">Intro</a></li>
      <li class="tab-content">
        <section id="intro">
          <p>{{ episode.description }}...</p>
        </section>
      </li>

      <li class="tab"><a href="#">Tracklist</a></li>
      <li class="tab-content">
        <section id="tracklist_placeholder"></section>
      </li>

      <li class="tab"><a href="#">Artists</a></li>
      <li class="tab-content">
        <section id="artists_placeholder"></section>
      </li>
    </ul>
  </main>
{% endblock %}

{% block page_styles %}
  <link rel="stylesheet" href="/static/css/episode-info.css">
{% endblock %}

{% block page_scripts %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/episode_info.js') }}"></script>
{% endblock %}
