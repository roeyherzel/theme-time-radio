{% extends "layout.html.j2" %}

{% block page_content %}
  <header>
    <img src="{{ episode.image }}" alt="Photo of {{ episode.title }}">
    <p>Season <span id="seasonId"> {{ episode.season }}</span> - Episode <span id="episode_id">{{ episode.id }}</span></p>
    <h1>{{ episode.title }}</h1>
    <p>{{ episode.aired }}</p>
  </header>

  <section id="episode_player">
    <div id="episode_player_controls">
      <button id="episode_prev_button" type="button">&nbsp;</button>
      <button id="episode_play_button" type="button">&nbsp;</button>
      <button id="episode_next_button" type="button">&nbsp;</button>
    </div>

    <div id="episode_progress_bar"></div>

    <div id="episode_progress_time">
      <span id="episode_current">0:00</span>
      <span> / </span>
      <span id="episode_duration">0:00</span>
    </div>

  </section>

  <main>
    <ul class="tabs">
      <li class="tab"><a href="#">Intro</a></li>
      <li class="tab-content">
        <section id="intro">
          <p>{{ episode.description }}...</p>
        </section>
      </li>

      <li class="tab"><a href="#">Tracklist</a></li>
      <li class="tab-content">
        <section id="tracklist_placeholder"></section>
      </li>

      <li class="tab"><a href="#">Artists</a></li>
      <li class="tab-content">
        <section id="artists_placeholder"></section>
      </li>
    </ul>
  </main>
{% endblock %}

{% block page_styles %}
  <link rel="stylesheet" href="/static/css/episode-info.css">
{% endblock %}

{% block page_scripts %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/episode_info.js') }}"></script>
{% endblock %}
