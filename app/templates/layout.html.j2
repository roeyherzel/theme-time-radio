    <title>Theme Time Radio Hour</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Righteous" rel="stylesheet">
    <link rel="stylesheet" href="/static/css/app.css">
  </head>

  <body>
    <div id="main_wrapper">
      <input type="checkbox" id="mobile_nav">

      <header>
        <label for="mobile_nav">
          <svg viewBox="0 0 226.216 226.216">
