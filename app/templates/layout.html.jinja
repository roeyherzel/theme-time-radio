<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theme Time Radio Hour</title>

    <link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}">
  </head>
  <body id="top">

    <div id="page_wrapper">

      <header id="main_header">
        <h3>Theme Time</h3>
        <nav></nav>
      </header>

      <div id="content_wrapper">
        {% block page_content %}{% endblock %}
      </div>

    </div>

    <footer>
      <a href="#top"><img src="/static/images/themetimelogo.jpg" alt="Theme time logo"></a>
    </footer>
    <!-- javaScripts -->
    <script type="text/javascript" src="{{ url_for('static', filename='js/jquery-3.1.1.min.js') }}"></script>

    <!-- TODO: try to workwitout underscore.js -->
    <script type="text/javascript" src="{{ url_for('static', filename='js/underscore-min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='js/handlebars.min-latest.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', filename='js/app.js') }}"></script>
    {% block page_scripts %}{% endblock %}
  </body>
</html>
