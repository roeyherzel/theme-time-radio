<div class="tracklist">
  <table class="table table-responsive table-condensed">
    <thead class="green">
      {{#unless episodes}}
        <th>#</th>
      {{/unless}}
      <th>SONG</th>
      <th>ARTIST</th>
      <th>YEAR</th>
      <th class="text-center">PREVIEW</th>
    </thead>
    <tbody>
      {{#each tracklist}}
        <tr>
          {{#unless episode.id}}
            <td>{{position}}</td>
          {{/unless}}
          <td>
            {{#getSongTitle spotify_song parsed_song episode.id}}{{/getSongTitle}}
          </td>
          <td>
            {{#getArtistTitle spotify_artists parsed_artist}}{{/getArtistTitle}}
          </td>
          <td>
            {{year}}
          </td>
          <td class="text-center">
            {{# if spotify_song.song.id }}
              <span class="glyphicon glyphicon-play-circle preview" previewUrl="{{spotify_song.song.preview_url}}"></span>
            {{else}}
              <span class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Songs not on Spotify"></span>
            {{/if}}
          </td>
        </tr>
      {{/each}}
  </table>
</div>
