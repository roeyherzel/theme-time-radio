<div class="tracklist">
  <table class="table table-responsive table-condensed">
    <thead class="green">
      <th>#</th>
      <th>SONG</th>
      <th>ARTIST</th>
      <th>YEAR</th>
      <th class="text-center">PREVIEW</th>
    </thead>
    <tbody>
      {{#each tracklist}}
        <tr>
          {{# if episode }}
            <td>
              <a href="/episodes/{{episode.id}}">{{episode.id}}</a>
            </td>
          {{else}}
            <td>{{position}}</td>
          {{/if}}
          <td>
            {{# if spotify_song.data.id }}
              {{spotify_song.data.name}}
            {{else}}
              {{parsed_song}}
            {{/if}}
          </td>
          <td>
            {{# artistName spotify_artists parsed_artist}}{{/artistName}}
          </td>
          <td>
            {{year}}
          </td>
          <td class="text-center">
            {{# if spotify_song.data.id }}
              <span class="glyphicon glyphicon-play-circle preview" previewUrl="{{spotify_song.data.preview_url}}"></span>
            {{else}}
              <span class="glyphicon glyphicon-question-sign"></span>
            {{/if}}
          </td>
        </tr>
      {{/each}}
  </table>
</div>
