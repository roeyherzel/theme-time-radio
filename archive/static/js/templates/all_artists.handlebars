
<div class="group">

  {{#each artists as |group|}}
    <h2 class="page-header">{{@key}}</h2>
    <div class="row">

      {{#each group as |artist|}}
        <div class="artist-card col-md-4">
          <div class="row">
            <div class="col-md-4">
              <a href="{{artist.view}}">
                {{#if artist.lastfm_image}}
                  <img class="img-responsive img-circle center-block" src="{{artist.lastfm_image}}" alt="" />
                {{else}}
                  <img class="img-responsive img-circle center-block" src="/static/images/default-artist.png" alt="" />
                {{/if}}
              </a>
            </div>
            <div class="col-md-8">
              <a href="{{artist.view}}">
                <div class="artist-name">{{artist.name}}</div>
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  {{/each}}
</div>
