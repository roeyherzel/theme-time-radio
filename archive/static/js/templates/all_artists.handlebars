
<div class="all-artists">

  <div class="groups-index text-center">
    {{#indexGroups artists}}{{/indexGroups}}
  </div>

  {{#each artists as |group|}}
    <div class="row" id="{{@key}}">
      <div class="col-md-12">
        <h2 class="page-header">{{@key}}</h2>
      </div>
    </div>
    <div class="row">
      {{#each group as |artist|}}
        <div class="artist-card col-md-6">
          <div class="media">
            <div class="media-left">
              <a href="{{artist.view}}">
                {{#if artist.lastfm_image}}
                  <img class="media-object img-rounded" src="{{artist.lastfm_image}}" alt="" />
                {{else}}
                  <img class="media-object img-rounded" src="/static/images/default-artist.png" alt="" />
                {{/if}}
              </a>
            </div>
            <div class="media-body">
              <a href="{{artist.view}}">
                <h4 class="media-heading">{{artist.name}}</h4>
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  {{/each}}
</div>
