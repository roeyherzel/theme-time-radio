

<div class="container well">
  <div class="groups-index text-center">
    {{#indexGroups tags}}{{/indexGroups}}
  </div>

  <div id="mixtapeList">
    {{#each tags as |group|}}
      <h4 id="{{@key}}" class="page-header text-left">{{@key}}</h4>

      <ul class="list-inline text-left">
        {{#each group as |tag|}}
          <li>
            <a href="#" class="btn btn-default" role="button" tag-name="{{tag.tag.name}}">
              {{tag.tag.name}}&nbsp;&nbsp;<span class="badge">{{tag.track_count}}</span>
            </a>
          </li>
        {{/each}}
      </ul>
    {{/each}}
  </div>

</div>
