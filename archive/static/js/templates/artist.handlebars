
<div class="jumbotron" id="artistInfo">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>{{lastfm.artist.name}}</h1>
        <div id="artistBio">
          {{#nl2br lastfm.artist.bio.summary}}{{/nl2br}}
        </div>
        <div id="artistTags">
          <ul class="list-inline">
            {{#each tags}}
              <li>
                <a href="/mixtapes/{{name}}" class="btn btn-default" role="button">{{name}}</a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="text-center">
          <img class="img-responsive img-rounded center-block" src="{{# lastFmImage lastfm.artist.image 'extralarge'}}{{/lastFmImage}}" alt="" />
        </div>
      </div>
    </div>
  </div>
</div>


<div class="jumbotron", id="songsPlayed">
  <div class="container">
    <h2 class="sub-header">Songs Played <small>on the show</small></h2>
    <div class="row">
      <div class="col-md-5 text-center">
        <div id="spotifyPlayer"></div>
      </div>
      <div class="col-md-7 text-center">
        <div id="tracklistPlaceholder"></div>
      </div>
    </div>
  </div>
</div>


<div class="jumbotron">
  <div class="container">
    <div class="row">
      {{#if lastfm.artist.similar.artist}}
        <div class="col-md-5">
      {{else}}
        <div class="col-md-12">
      {{/if}}
        <div class="text-center" id="topTracks">
          <h2 class="sub-header">Top Tracks <small>on Spotify</small></h2>
          <iframe id="topTracksPlayer" src="" width="400" height="540" frameborder="0" allowtransparency="true"></iframe>
        </div>
      </div>
      {{#if lastfm.artist.similar.artist}}
        <div class="col-md-7 text-center" id="similarArtist">
          <h2 class="sub-header">Similar Artists <small>on the show</small></h2>

          <ul class="list-inline">
            {{#each lastfm.artist.similar.artist}}
              <li>
                <a href="/artists/{{name}}">
                  <img class="img-circle img-responsive center-block" src={{# lastFmImage image "large"}}{{/lastFmImage}} alt="" />
                  <div class="artist-name">{{name}}</div>
                </a>
              </li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
    </div>
  </div>
</div>
