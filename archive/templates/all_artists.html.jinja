{% extends "layout.html.jinja" %}


{% block content %}
  <div class="jumbotron">
    <div class="container text-center">
      <img class="center-block" src="{{ url_for('static', filename='images/cassette.png') }}" alt="" />
      <h1>Artists</h1>
    </div>
  </div>

  <div class="container">
    <ul class="list-inline text-center" id="artistList">
      {% for artist in artists.items %}
        <li>
          <div class="artist-card">
            <a href="/artists/{{artist.lastfm_name}}">
              {% if artist.lastfm_image %}
                <img class="img-circle" src="{{artist.lastfm_image}}" alt="" />
              {% else %}
                <img class="img-circle" src="/static/images/default-artist.png" alt="" />
              {% endif %}
              <h4>{{artist.name}}</h4>
            </a>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>


  <nav class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
      <nav aria-label="...">
        <ul class="pager">
          {% if artists.has_prev %}
            <li class="previous"><a href="{{ url_for('artist_view', page=artists.prev_num) }}"><span aria-hidden="true">&larr;</span> Older</a></li>
          {% endif %}

          {% if artists.has_next %}
            <li class="next"><a href="{{ url_for('artist_view', page=artists.next_num) }}">Newer <span aria-hidden="true">&rarr;</span></a></li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </nav>

{% endblock %}


{% block style %}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/all_artists.css') }}">
{% endblock %}


{% block script %}
  <script type="text/javascript">

  $(document).ready(function() {
    // nav bar active
    $('ul.nav > li:has(a[href="/artists"])').addClass("active");
  });
  </script>

{% endblock %}
