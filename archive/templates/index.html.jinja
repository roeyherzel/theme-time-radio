{% extends "layout.html.jinja" %}

{% block content %}
  <div class="jumbotron">
    <div class="container text-center">
      <h1>Theme Time Tapes</h1>
      <p class="lead"> Discover Music from Bob Dylan's Podcast: Theme Time Radio Hour</p>
      <img src="{{ url_for('static', filename='images/cassette3.png') }}" alt="" />

      <div class="panel panel-default">
        <ul class="nav nav-pills nav-justified">
          <li class="active"><a data-toggle="pill" href="#podcast">Podcast</a></li>
          <li><a data-toggle="pill" href="#artists">Artists</a></li>
          <li><a data-toggle="pill" href="#albums">Albums</a></li>
          <li><a data-toggle="pill" href="#songs">Songs</a></li>
        </ul>
      </div>

    </div>
  </div>

  <div class="container">

    <div class="tab-content">
      <div id="podcast" class="tab-pane fade in active">
        <h3>Season 1</h3>
        <div class="episodes_placeholder"></div>
      </div>
      <div id="artists" class="tab-pane fade">
        <h3>Artists</h3>
      </div>
      <div id="albums" class="tab-pane fade">
        <h3>Albums</h3>
      </div>
      <div id="songs" class="tab-pane fade">
        <h3>Songs</h3>
      </div>
    </div>
  </div> <!-- /container -->
{% endblock %}

{% block style %}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/main.css') }}">
{% endblock %}

{% block script %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/episodes.js') }}"></script>
{% endblock %}
