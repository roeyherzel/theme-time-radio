{% extends "layout.html.jinja" %}

{% block content %}
  <div class="jumbotron">
    <div class="container text-center">

      <!--<hr class="hr-dark">-->
      <img src="{{ url_for('static', filename='images/cassette3.png') }}" alt="" />
      <h1>Theme Time Radio Tapes</h1>
      <p class="lead"> Discover Music from Bob Dylan's Podcast: Theme Time Radio Hour</p>

      <div>
        <ul class="nav nav-tabs nav-justified">
          <li class="active"><a data-toggle="tab" href="#podcast">Podcast</a></li>
          <li><a data-toggle="tab" href="#artists">Artists</a></li>
          <li><a data-toggle="tab" href="#albums">Albums</a></li>
          <li><a data-toggle="tab" href="#songs">Songs</a></li>
        </ul>
      </div>

    </div>
  </div>

  <div class="container">

    <div class="tab-content">
      <div id="podcast" class="tab-pane fade in active">
        <h3 class="page-header">Season 1</h3>
        <div class="episodes_placeholder"></div>
      </div>
      <div id="artists" class="tab-pane fade">
        <h3>Artists</h3>
      </div>
      <div id="albums" class="tab-pane fade">
        <h3>Albums</h3>
      </div>
      <div id="songs" class="tab-pane fade">
        <h3>Songs</h3>
      </div>
    </div>
  </div> <!-- /container -->
{% endblock %}

{% block style %}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/main.css') }}">
{% endblock %}

{% block script %}
  <script type="text/javascript" src="{{ url_for('static', filename='js/main.js') }}"></script>
{% endblock %}
